{
    "name": "lina-engine-shader-highlighting",
    "displayName": "Lina Engine Shader Highlighting",
    "description": "Provides suppport for highlighting Lina Engine's GLSL shader files.",
    "version": "0.0.2",
    "icon":"images/linalogofull.png",
    "publisher": "inanevin",
    "engines": {
        "vscode": "^1.65.0"
    },
    "repository":{
        "type":"git",
        "url":"https://github.com/inanevin/Lina-Engine-Shader-Highlighting-VS-Code"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "linaglsl",
            "aliases": ["Lina GLSL", "linaglsl"],
            "extensions": [".linaglsl",".linaglh"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "linaglsl",
            "scopeName": "source.linaglsl",
            "path": "./syntaxes/linaglsl.tmLanguage.json"
        }]
    }
}